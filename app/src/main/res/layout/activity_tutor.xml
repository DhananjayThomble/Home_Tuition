<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background"
    android:id="@+id/rel1"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/student_bottom_nav"
        android:layout_marginBottom="0dp">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/student_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/darkTextColor"
        app:itemIconTint="@color/secondaryTextColor"
        app:itemTextColor="@color/secondaryTextColor"
        app:menu = "@menu/bottom_nav_tutor"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewTutor"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</RelativeLayout>